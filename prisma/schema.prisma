generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model User {
  id        String   @id @default(uuid())
  username  String
  email     String   @unique
  password  String
  film      Film[]  
  createdAt DateTime @default(now())
}

model Film {
  id           String   @id @default(uuid())
  title        String
  startSession DateTime @default(now())
  endSession   DateTime
  duration     Decimal
  room         Int
  price        Decimal
  synopsis     String
  createdAt    DateTime @default(now())
  users        User[]
}
